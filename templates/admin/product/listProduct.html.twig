{% extends 'base.html.twig' %}

{% block title %}Product Admin{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1>Products</h1>
        <a class="btn btn-primary" href="{{  path('app_admin_create_product')}}">Create New Product</a>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Brand</th>
                <th scope="col">Description</th>
                <th scope="col">Stock</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
                <th scope="col"></th>


            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr class="table-warning" id="{{ product.id }}">
                    <td>{{ product.name }}</td>
                    <td>{{ product.brand }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.stock }}</td>
                    <td>{{ product.price }}</td>

                    <td><a href="{{ path('app_admin_delete_product', { 'id': product.id }) }}">Delete</a></td>
                    <td><a href="{{ path('app_admin_edit_product', { 'id': product.id }) }}">Edit</a></td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
