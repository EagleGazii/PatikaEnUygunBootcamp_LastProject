{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Quantity</th>
                <th scope="col">Address</th>
                <th scope="col">Total Price</th>
                <th scope="col">Approve</th>


            </tr>
            </thead>
            <tbody>
            {% for order in disapprovedOrder %}
                <tr class="table-warning" id="{{ order.id }}">
                    <td>{{ order.firstName }}</td>
                    <td>{{ order.lastName }}</td>
                    <td>{{ order.email }}</td>
                    <td>{{ order.quantity }}</td>
                    <td>{{ order.address }}</td>
                    <td>{{ order.totalPrice }}</td>
                    <td><a href="{{ path('app_admin_order_approve', { 'orderIdForApprove': order.id }) }}">Approve Order</a></td>
                </tr>
            {% endfor %}
            {% for order in approvedOrder %}
                <tr class="table-success" id="{{ order.id }}">
                    <td>{{ order.firstName }}</td>
                    <td>{{ order.lastName }}</td>
                    <td>{{ order.email }}</td>
                    <td>{{ order.quantity }}</td>
                    <td>{{ order.address }}</td>
                    <td>{{ order.totalPrice }}</td>
                    <td >Approved</td>

                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}
